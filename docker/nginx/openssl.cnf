[req]
default_bits       = 2048
prompt             = no
default_md         = sha256
req_extensions     = req_ext
distinguished_name = dn

[dn]
CN = amrcompany.com

[req_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = amrcompany.com
DNS.2 = www.amrcompany.com
DNS.3 = admin.amrcompany.com
DNS.4 = app.amrcompany.com
DNS.5 = localhost

[ext]
subjectAltName = @alt_names
